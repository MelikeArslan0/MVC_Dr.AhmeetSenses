@model IEnumerable<MelikeArslan_211103031.DAL.DoktorBilgileri>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutPage1_Admin.cshtml";
}

<h2>Doktor Bilgileri</h2>


<table class="table" >
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Ad)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Meslegi)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Konum)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Resimyolu)
        </th>
        <th>
            <div style="display:none">
                @Html.DisplayNameFor(model => model.Bilgi)
                </div>
        </th>
        <th>
            <div style="display:none">
                @Html.DisplayNameFor(model => model.sosyal1)
             </div>
        </th>
        <th>
            <div style="display:none">
                @Html.DisplayNameFor(model => model.sosyal2)
                </div>
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Ad)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Meslegi)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Konum)
        </td>
        <td>
            <img src="@item.Resimyolu" width="60" height="60"/>
          
        </td>
        <td>
            <div style="display:none">
                @Html.DisplayFor(modelItem => item.Bilgi)
            </div>
        </td>
        <td>
            <div style="display:none">
            @Html.DisplayFor(modelItem => item.sosyal1)
            </div>
        </td>
        <td>

            <div style="display:none">
                @Html.DisplayFor(modelItem => item.sosyal2)
                </div>
        </td>
        <td>
            @Html.ActionLink("Ekle", "Edit", new { id=item.id }, new {@class="btn btn-success"}) 
            @Html.ActionLink("Detaylar", "Details", new { id=item.id },new { @class = "btn btn-warning"} ) 
         
        </td>
    </tr>
}

</table>
