@model IEnumerable<MelikeArslan_211103031.DAL.Hastaliklar>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutPage1_Admin.cshtml";
}

<h2>Hastalıklar</h2>

<p>
    @Html.ActionLink("Yeni Ekle", "Create", null, new { @class = "btn btn-primary" }) 
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Hastalik)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Hastalik)
        </td>
        <td>
            @Html.ActionLink("Ekle", "Edit", new { id = item.id }, new { @class = "btn btn-success" })  |
            @Html.ActionLink("Detaylar", "Details", new { id = item.id }, new { @class = "btn btn-warning" })  |
            @Html.ActionLink("Sil", "Delete", new { id = item.id }, new { @class = "btn btn-danger" }) 
        </td>
    </tr>
}

</table>
